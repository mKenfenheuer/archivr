@model Archivr.PrintingServer.Model.Label
@{
    Layout = "/Views/Shared/_LabelLayout.cshtml";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&family=Ubuntu+Mono&display=swap" rel="stylesheet">
<style>
    html,
    body {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        overflow: hidden;
    }

    * {
        font-family: 'Open Sans', sans-serif;
    }

    .container {
        position: fixed;
        background: #fff;
        width: 100%;
        height: 100%;
        margin: -3mm 0;
    }

        .container .label-code {
            font-size: 12px;
            font-weight: bold;
            height: auto;
            width: 100%;
            position: fixed;
            left: 0;
            text-align: center;
            bottom: 0mm;
            font-family: 'Ubuntu Mono', monospace;
            letter-spacing: 1px;
        }

        .container .container-column {
            height: 37mm;
            width: 100%;
        }

            .container .container-column .qrcode-holder {
                height: 100%;
                width: 45%;
                float: left;
                overflow: hidden;
            }

                .container .container-column .qrcode-holder .qr-code {
                    height: 100%;
                    width: auto;
                    object-fit: contain;
                    margin-top: 0.75mm;
                    margin-left: -2.5mm;
                    margin-bottom: -3mm;
                }

            .container .container-column .info-holder {
                position: fixed;
                float: right;
                height: 75%;
                right: 0;
                z-index: 10;
                width: 55%;
                margin-top: 0.5mm;
                margin-right: 2mm;
                margin-left: -2mm;
            }

                .container .container-column .info-holder .label-title {
                    position: absolute;
                    margin-top: 1mm;
                    font-size: 24px;
                    font-weight: bold;
                    width: 100%;
                    height: auto;
                    text-overflow: ellipsis;
                    overflow: hidden;
                    white-space: nowrap;
                }

                .container .container-column .info-holder .label-description {
                    position: absolute;
                    bottom: 0;
                    padding-top: 1px;
                    font-size: 15px;
                    width: 100%;
                    text-overflow: ellipsis;
                    overflow: hidden;
                    -webkit-line-clamp: 3;
                }
</style>

<div class="container">
    <div class="container-column">
        <div class="qrcode-holder">
            <img class="qr-code" src="@Model.QrCodeImage" />
        </div>
        <div class="info-holder">
            <div class="label-title">@Model.Name</div>
            <div class="label-description">@Model.Description</div>
        </div>
    </div>
    <div class="label-code">@Model.Code.ToUpper()</div>
</div>
